<div style="min-height: 550px;">
    <div class="row">
        <div class="col-lg-6">
            <h4 class="page-header">I.O.F.</h4>
        </div>
        <!-- /.col-lg-12 -->
    </div>
        <!-- /.row -->
    <div class="row">
        <div class="col-lg-6">

            <% if @tax.errors.any? %>
                <div class="alert alert-danger">
                    <ul>
                        <% @tax.errors.full_messages.each do |message| %>
                        <li> <%= message %> </li>
                        <% end %>
                    <ul>
                </div>
            <% end %>

            <%= form_for([:location, @tax.branch, @tax]) do |form| %>
                <div class="panel panel-default">
                    <div class="panel-heading col-lg-12" style="height: 50px" >
                        <% if @tax.id? %>
                            <%= "IOF - Ramo - #{@name_branch} (Editar)" %>
                        <% else %>
                            <%= "IOF - Ramo - #{@name_branch} (Novo)" %>
                        <% end %>
                    </div>
                    <div class="panel-body ">
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>VigÃªncia</label>
                                    <%= form.date_field :validity, class: "form-control" %>
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>% IOF</label>
                                    <div class="input-group">
                                        <%= form.text_field :rate, class: "form-control percent" %>
                                        <span class="input-group-addon"><i class="fa fa-deviantart"></i></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12" style="margin-top: 10px">
                                <div class="form-group">
                                    <label>Prazo Curto e Longo</label>
                                    <%= collection_select(:tax, :deadline_short_long_id, @deadline_short_long_options, :id, :description, {}, {:class=>"form-control"}) %>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <%= form.submit 'Salvar', class: "btn btn-primary"  %>
                                <%= link_to 'Voltar', location_branch_taxes_path(@tax.branch_id), class: "btn btn-default" %>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
