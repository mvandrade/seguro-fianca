<div style="min-height: 550px;">
  <div class="row">
      <div class="col-lg-6">
          <h4 class="page-header">I.O.F.</h4>
      </div>
      <!-- /.col-lg-12 -->
  </div>

  <!-- /.row -->
  <div class="row">
    <div class="col-lg-6">
      <div class="panel panel-default">
        <div class="panel-heading col-lg-11" style="height: 50px" >
          <%= "Vigência(s) de  I.O.F. do Ramo - #{@name_branch}" %>
        </div>
        <div class="panel-heading col-lg-1" style="height: 50px">
          <%= link_to new_location_branch_tax_path, class: "btn btn-default btn-circle pull-right" do %>
            <i class="fa fa-plus"></i>
          <% end %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
            <div class="row">
              <div class="col-sm-6" style="margin-top: 10px">
                  <label>Mostrar
                    <select name="dataTables-example_length" aria-controls="dataTables-example" class="form-control input-sm">
                      <option value="10">10</option>
                      <option value="25">25</option>
                      <option value="50">50</option>
                      <option value="100">100</option>
                    </select> linhas
                  </label>
              </div>
              <div class="col-sm-6" style="margin-top: 10px">
                <div id="dataTables-example_filter" class="dataTables_filter">
                  <label>Buscar:
                    <input class="form-control input-sm" placeholder="" aria-controls="dataTables-example" type="search">
                  </label>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-12">
                <table class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;" width="100%">
                  <thead>
                    <tr role="row">
                      <th>#</th>
                      <th>Ramo</th>
                      <th>Vigência</th>
                      <th>% IOF</th>
                      <th colspan="2">Ações</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @taxes.each do |tax| %>                                
                      <tr class="gradeA odd" role="row">
                          <td style="width: 10px"><%= tax.id %></td>
                          <td style="width: 150px"><%= tax.branch.name %></td>
                          <td style="width: 30px"><%= tax.validity %></td>
                          <td style="width: 70px"><%= number_to_percentage(tax.rate, precision: 2) %></td>
                          <td style="width: 65px">
                            <%= link_to edit_location_branch_tax_path(tax.branch, tax), class: "btn btn-default btn-circle" do %>
                              <i class="fa fa-edit"></i>
                            <% end%>
                            <%= link_to location_branch_tax_path(tax.branch, tax), method: :delete,
                            data: {confirm: "O % IOF% será escluido, confirma ?"},
                            class:"btn btn-default btn-circle" do %>
                              <i class="fa fa-trash-o"></i>
                            <% end %>
                          </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                <div class="pull-right">
                  <%= will_paginate @taxes, renderer: BootstrapPagination::Rails %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
