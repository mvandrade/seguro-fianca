<div style="min-height: 550px;">
  <div class="row">
      <div class="col-lg-12">
          <h4 class="page-header">Coberturas</h4>
      </div>
      <!-- /.col-lg-12 -->
  </div>

  <!-- /.row -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading col-lg-11" style="height: 50px" >
          Lista das Coberturas
        </div>
        <div class="panel-heading col-lg-1" style="height: 50px">
          <%= link_to new_location_cover_path, class: "btn btn-default btn-circle pull-right" do %>
            <i class="fa fa-plus"></i>
          <% end %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
            <div class="row">
              <div class="col-sm-6" style="margin-top: 10px">
                  <label>Mostrar
                    <select name="dataTables-example_length" aria-controls="dataTables-example" class="form-control input-sm">
                      <option value="10">10</option>
                      <option value="25">25</option>
                      <option value="50">50</option>
                      <option value="100">100</option>
                    </select> linhas
                  </label>
              </div>
              <div class="col-sm-6" style="margin-top: 10px">
                <div id="dataTables-example_filter" class="dataTables_filter">
                  <label>Buscar:
                    <input class="form-control input-sm" placeholder="" aria-controls="dataTables-example" type="search">
                  </label>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-12">
                <table class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;" width="100%">
                  <thead>
                    <tr role="row">
                      <th>#</th>
                      <th>Código</th>
                      <th>Nome</th>
                      <th>Ramo</th>
                      <th>Descrição</th>
                      <th colspan="2">Ações</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @covers.each do |cover| %>                                
                      <tr class="gradeA odd" role="row">
                          <td style="width: 10px"><%= cover.id %></td>
                          <td style="width: 10px"><%= cover.code %></td>
                          <td style="width: 300px"><%= cover.name %></td>
                          <td style="width: 100px"><%= cover.branch.name %></td>
                          <td style="width: 400px"><%= cover.description %></td>
                          <td style="width: 60px">
                            <%= link_to edit_location_cover_path(cover), class: "btn btn-default btn-circle" do %>
                              <i class="fa fa-edit"></i>
                            <% end%>
                            <%= link_to location_cover_path(cover), method: :delete,
                            data: {confirm: "A cobertura #{cover.name} será escluido, confirma ?"},
                            class:"btn btn-default btn-circle" do %>
                              <i class="fa fa-trash-o"></i>
                            <% end %>
                          </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                <div class="pull-right">
                  <%= will_paginate @covers, renderer: BootstrapPagination::Rails %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
