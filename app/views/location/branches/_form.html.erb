<div style="min-height: 550px;">
    <div class="row">
        <div class="col-lg-12">
            <h4 class="page-header">Ramos</h4>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <% if @branch.errors.any? %>
        <div class="alert alert-danger">
            <ul>
                <% @branch.errors.full_messages.each do |message| %>
                <li> <%= message %> </li>
                <% end %>
            <ul>
        </div>
    <% end %>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-8">
            <%= form_for([:location, @branch]) do |form| %>
                <div class="panel panel-default">
                    <div class="panel-heading col-lg-12" style="height: 50px" >
                    <% if @branch.id? %>
                        Ramo (Editar)
                    <% else %>
                        Ramo (Novo)
                    <% end %>
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body ">

                        <div class="row">

                            <div class="col-lg-2" style="margin-top: 10px">
                                <div class="form-group">
                                    <label>Código</label>
                                    <%= form.text_field :code, class: "form-control" %>
                                </div>
                            </div>
                            <div class="col-lg-12" style="margin-top: 10px">
                                <div class="form-group">
                                    <label>Nome</label>
                                    <%= form.text_field :name, class: "form-control" %>
                                </div>
                            </div>
                            <div class="col-lg-12" style="margin-top: 10px">
                                <div class="form-group">
                                    <label>Grupo</label>
                                    <%= collection_select(:branch, :group_branch_id, @group_branch_options, :id, :description, {}, {:class=>"form-control"}) %>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Descrição</label>
                                    <%= form.text_area :description, size: "50x3", class: "form-control" %>
                                </div>
                            </div>

                        </div>
                        <!-- /.col-lg-12 -->
                        <%= form.submit 'Salvar', class: "btn btn-primary"  %>
                        <%= link_to 'Voltar', location_branches_path, class: "btn btn-default" %>

                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>

