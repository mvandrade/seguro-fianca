<div style="min-height: 550px;">
  <div class="row">
      <div class="col-lg-12">
          <h4 class="page-header">Informações de Produtos</h4>
      </div>
      <!-- /.col-lg-12 -->
  </div>

  <div class="row">
    <div class="col-lg-8">
      <div class="panel panel-default">
        <div class="panel-heading col-lg-11" style="height: 50px" >
          <%= "Vigência(s) do Produto #{ @name_product }" %>
        </div>
        <div class="panel-heading col-lg-1" style="height: 50px">
          <%= link_to new_location_product_information_product_path, class: 'btn btn-default btn-circle pull-right' do %>
            <i class="fa fa-plus"></i>
          <% end %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
            <div class="row">
              <div class="col-sm-6" style="margin-top: 10px">
                  <label>Mostrar
                    <select name="dataTables-example_length" aria-controls="dataTables-example" class="form-control input-sm">
                      <option value="10">10</option>
                      <option value="25">25</option>
                      <option value="50">50</option>
                      <option value="100">100</option>
                    </select> linhas
                  </label>
              </div>
              <div class="col-sm-6" style="margin-top: 10px">
                <div id="dataTables-example_filter" class="dataTables_filter">
                  <label>Buscar:
                    <input class="form-control input-sm" placeholder="" aria-controls="dataTables-example" type="search">
                  </label>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-12">
                <table class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;" width="100%">
                  <thead>
                    <tr role="row">
                      <th>#</th>
                      <th>Vigência</th>
                      <th>Prêmio Mínimo Parcela</th>
                      <th>Prêmio Mínimo Apólice</th>
                      <th>% Máximo de Desconto%</th>
                      <th>% Máximo de Comissão</th>
                      <th colspan="2">Ações</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @information_products.each do |information_product| %>
                      <tr class="gradeA odd" role="row">
                        <td><%= information_product.id %></td>
                        <td><%= information_product.validity %></td>
                        <td><%= number_to_currency(information_product.minimum_plot_value) %></td>
                        <td><%= number_to_currency(information_product.minimum_policy_value) %></td>
                        <td><%= number_to_percentage(information_product.discount_limit, precision: 2) %></td>
                        <td><%= number_to_percentage(information_product.commission_limit, precision: 2) %></td>
                        <td style="width: 65px">
                          <%= link_to edit_location_product_information_product_path(information_product.product, information_product), class: "btn btn-default btn-circle" do %>
                            <i class="fa fa-edit"></i>
                          <% end%>
                          <%= link_to location_product_information_product_path(information_product.product, information_product), method: :delete,
                          data: {confirm: "A informação do produto será escluido, confirma ?"},
                          class:"btn btn-default btn-circle" do %>
                            <i class="fa fa-trash-o"></i>
                          <% end %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>