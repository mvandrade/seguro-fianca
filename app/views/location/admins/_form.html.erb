<div style="min-height: 550px;">
    <div class="row">
        <div class="col-lg-12">
            <h4 class="page-header">Usuários</h4>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <% if @admin.errors.any? %>
        <div class="alert alert-danger">
            <ul>
                <% @admin.errors.full_messages.each do |message| %>
                <li> <%= message %> </li>
                <% end %>
            <ul>
        </div>
    <% end %>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-8">
            <%= form_for([:location, @admin]) do |form| %>
                <div class="panel panel-default">
                    <div class="panel-heading col-lg-12" style="height: 50px" >
                    <% if @admin.id? %>
                        Usuário (Editar)
                    <% else %>
                        Usuário (Novo)
                    <% end %>
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body ">

                        <div class="row">
                            <div class="col-lg-12" style="margin-top: 10px">
                                <div class="form-group">
                                    <label>Nome</label>
                                    <%= form.text_field :name, class: "form-control" %>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>E-Mail</label>
                                    <%= form.email_field :email, class: "form-control" %>
                                </div>
                            </div>

                            <% if @admin.id? %>
                                <div>
                                    <p class="text-center">Preencha a senha, somente quando for necessária a alteração</p>
                                </div>
                        
                            <% end %>

                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Senha</label>
                                    <%= form.password_field :password, class: "form-control" %>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Confirmação de Senha</label>
                                    <%= form.password_field :password_confirmation, class: "form-control" %>
                                </div>
                            </div>
                        </div>
                        <!-- /.col-lg-12 -->
                        <%= form.submit 'Salvar', class: "btn btn-primary"  %>
                        <%= link_to 'Voltar', location_admins_path, class: "btn btn-default" %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

