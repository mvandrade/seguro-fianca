<div style="min-height: 550px;">
  <div class="row">
      <div class="col-lg-9">
          <h4 class="page-header">Composição do Produto</h4>
      </div>
      <!-- /.col-lg-12 -->
  </div>

  <!-- /.row -->
  <div class="row">
    <div class="col-lg-9">
      <div class="panel panel-default">
        <div class="panel-heading">
          Produto x Coberturas
        </div>
        <div class="panel-body">
          <div class="col-lg-12" style="margin-top: 10px">
            <div class="form-group">
              <label>Produto</label>
              <div class="row">
                <%= form_tag location_composition_products_path, :method => 'get' do %>
                  <div class="col-lg-10">
                    <%= collection_select(:composition_product, :product_id, @distinct_product, :id, :name, { :selected => @product_id }, {:class=>"form-control"}) %>
                  </div>
                  <div class="col-lg-2">
                    <%= submit_tag 'Atualizar...', class: "btn btn-default" %>
                  </div>
                <% end %>
              </div>
            </div>

            <div class="row">
              <% @composition_product_covers.each do |composition_product_cover| %>
                <div class="col-lg-4 col-md-8">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-2">
                                    <i class="fa fa-tasks fa-4x"></i>
                                </div>
                                <div class="col-xs-10 text-right">
                                    <div><%= composition_product_cover.code %></div>
                                    <div><h4><%= truncate(composition_product_cover.name, length: 20) %></h4></div>
                                </div>
                            </div>
                        </div>
                        <%= link_to location_composition_product_information_coverages_path(composition_product_cover) do %>
                            <div class="panel-footer">
                                <span class="pull-left"><%= branch_of_cover(composition_product_cover.branch_id).name %></span>
                                <span class="pull-right"><i class="fa fa-history fa-2x"></i></span>
                                <div class="clearfix"></div>
                            </div>
                        <% end %>
                    </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= params.inspect %>